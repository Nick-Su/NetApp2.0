@model NetApp.Models.ConnectionType

@{
    ViewBag.Title = "Удаление";
}

<h2 class="text-primary">Удалить тип сделки</h2>

<h3 class="text-info">Вы уверены, что хотите удалить этот тип?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Decription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Decription)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <input type="hidden" name="gid" id="gid" />
        <input type="hidden" name="gameCode" id="gameCode" />

        <div class="container nopadding">
            <div class="form-actions no-color col-xs-6 nopadding">
                <input type="submit" value="Удалить" class="btn btn-danger btn-block" />
            </div>

            <div class="col-xs-6">
                <div id="addBackLink"></div>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    let searchParams = new URLSearchParams(window.location.search);
    searchParams.has('gid');
    let gid = searchParams.get('gid');

    let searchGameCode = new URLSearchParams(window.location.search);
    searchGameCode.has('gameCode');
    let gameCode = searchParams.get('gameCode');

    let classBackLink = "btn btn-primary btn-block";
    let backLink = '<a href="' + "/ConnectionTypes/Index/?gameCode=" + gameCode + "&gid=" + gid + '" class="' + classBackLink + '">Назад, к спиcку</a>';
    $("#addBackLink").append(backLink);

    $("#gid").val(gid);
    $("#gameCode").val(gameCode);
</script>