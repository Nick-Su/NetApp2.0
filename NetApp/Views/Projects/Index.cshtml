@model IEnumerable<NetApp.Models.Project>

@{
    ViewBag.Title = "Мои проекты";
}

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/signalr/client.js"></script>
    <script src="~/Scripts/signalr/common.js"></script>
}

<link href="~/Styles/main.css" rel="stylesheet" type="text/css" />

<div class="container">
    <h2 class="text-primary">Мои проекты</h2>

    <p>
        @Html.ActionLink("Добавить новый", "Create", null, new { @class = "btn btn-sm btn-default" })
    </p>
</div>

<input type="hidden" class="pageName" value="trustedPage" />
@Html.Partial("_StatusBar")

<div class="row">

    <div class="outer">
        @foreach (var item in Model)
        {
            <div class="project-wrap
             col-xs-10
             col-xs-offset-1
             col-sm-2
             col-sm-offset-1
             col-md-4
             col-md-offset-1">
                <div class="row">
                    <p class="projectInfo">Название</p>
                    <h4 class="text-center projectInfo"> <span>@Html.DisplayFor(modelItem => item.Name)</span></h4>
                </div>

                <div class="row">
                    <p class="projectInfo">Кому помогает?</p>
                    <h4 class="text-center projectInfo"><span>@Html.DisplayFor(modelItem => item.Whom)</span></h4>
                </div>

                <div class="row">
                    <p class="projectInfo">Что делает?</p>
                    <h4 class="text-center projectInfo"><span>@Html.DisplayFor(modelItem => item.What)</span></h4>
                </div>

                <div class="row">
                    <p class="projectInfo">В чем фишка?</p>
                    <h4 class="text-center projectInfo"><span>@Html.DisplayFor(modelItem => item.Feature)</span></h4>
                </div>

                <div class="row">
                    <p class="projectInfo">Автор:</p>
                    <h4 class="text-center projectInfo"><span>@Html.DisplayFor(modelItem => item.Author)</span></h4>
                </div>

                <div class="row">
                    <p class="projectInfo">Контакт для связи:</p>
                    <h4 class="text-center projectInfo"><span>@Html.DisplayFor(modelItem => item.Contact)</span></h4>
                </div>

                <div class="row" style="padding: 10px;">
                    <h4 class="text-center">
                        @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })
                        @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                        @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </h4>
                </div>


            </div>
        }
    </div>
</div>

